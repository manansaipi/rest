{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            4//->default 2
        ],
        "linebreak-style": 0, //->0
        "semi": [
            "error",
            "never"
        ],
        "max-len": [ 
            "error",
            {
                "code": 300 // ->default 100
            }
        ],
        "spaced-comment": "off", //->on/off
        "no-trailing-spaces": "off",//->on/off
        "no-console": "off", //->off
        "comma-dangle": "off", //->off
        "no-multiple-empty-lines": "off", //->on
        "eol-last": 0 //->0
    }
}
